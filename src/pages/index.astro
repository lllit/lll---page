---
import Layout from '@layouts/Default.astro';
import RecentBlogPosts from '@components/generic/RecentBlogPosts.astro';
import MobileSocials from '@components/home/MobileSocials.astro';
import { Pill } from '@eliancodes/brutal-ui';
import { Button } from '@eliancodes/brutal-ui';
import { Card } from '@eliancodes/brutal-ui';

const builtWith = [
  { name: 'Python', url: 'https://astro.build/' },
  { name: 'CSharp .NET', url: 'https://uno.antfu.me/' },
  {
    name: 'Touchdesigner',
    url: 'https://docs.astro.build/en/guides/content-collections/',
  },
  { name: 'Ableton Live',
    url: 'https://docs.astro.build/en/guides/rss/' 
  }
  
];
---

<Layout
  title='Home'
  pageTitle='Home'
  description='pagina en proceso'
>
  <main class='bg-pink p-6'>
    <MobileSocials />
    <section id='about' class='grid md:grid-cols-8 gap-8 mt-4'>
      <h2 class='hidden'>Sobre...</h2>
      <div class='col-span-2'>
        <Card>
          <div class='flex flex-col justify-between items-start gap-4'>
            <p class='mt-4 outfit text-2xl md:text-4xl lg:text-6xl'>
              Puedes encontrar mi musica en <a
                class='text-white'
                target='_blank'
                href='https://lllit3.bandcamp.com/'>Bandcamp</a
              >
            </p>
            <p class='mt-2 outfit text-xl md:text-3xl lg:text-5xl'>
              Minimal Dub | Experimental Sound | Ambient
            </p>
            <Button target={'_self'} href='/novedades/'>
              Catologo &rarr;
            </Button>
          </div>
        </Card>
      </div>
      <div class='col-span-2'>
        <Card>
          <div class='flex flex-col justify-between items-start gap-4'>
            <p class='mt-4 outfit text-2xl md:text-5xl lg:text-6xl'>
              Puedes encontrar videos en <a
                class='text-white'
                target='_blank'
                href='https://lllit3.bandcamp.com/'>Instagram</a
              >
            </p>
            <p class='mt-2 outfit text-xl md:text-3xl lg:text-5xl'>
              #Lisergic | #Psychedlic | #VJ
            </p>
            <Button target={'_self'} href='https://www.instagram.com/'>
              Link del blog &rarr;
            </Button>
          </div>
        </Card>
      </div>
      <div class='col-span-2'>
        <Card>
          <h2 class='text-2xl md:text-4xl lg:text-6xl mb-4 roboto'>
            Tecnologias FAV
          </h2>
          <ul class='flex gap-4 flex-wrap'>
            {
              builtWith.map((item) => (
                <li>
                  <Pill>
                    <a
                      class='sanchez'
                      href={item.url}
                      target='_blank'
                      title={`Go to ${item.name}`}
                    >
                      {item.name}
                    </a>
                  </Pill>
                </li>
              ))
            }
          </ul>
        </Card>
      </div>
    </section>
    <section class='mt-8'>
      <Card>
        <h2 class='text-2xl md:text-4xl lg:text-6xl mb-4 roboto'>
          LLLIT?
        </h2>
        <p class='poppins'>
          Visceral and mental improvisation, creating sonic landscapes that transport you to unknown dimensions
          >
        </p>
      </Card>
    </section>
    

    <RecentBlogPosts />
  </main>
</Layout>
